<Window x:Class="Exams.UI.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:infrastructure="clr-namespace:Exams.UI.Infrastructure"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://www.codeplex.com/prism"
        FontSize="22"
        d:DesignHeight="300"
        d:DesignWidth="300"
        mc:Ignorable="d">
    <Window.Resources>
        <SolidColorBrush x:Key="BackgroundKey"
                         Color="#FFFFFF" />
    </Window.Resources>
    <ContentControl x:Name="MainWindow"
                    Grid.Column="1"
                    Margin="5 5 5 5"
                    prism:RegionManager.RegionName="{x:Static infrastructure:Regions.MainWindow}" />
</Window>
